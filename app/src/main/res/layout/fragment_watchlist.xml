<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.WatchlistFragment" >

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/progress_horizontal_watchlist_guideline1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.75"/>


    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/progress_horizontal_watchlist_guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/progress_horizontal_watchlist_guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/vertical_watchlist_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.5"/>

    <TextView
      android:id="@+id/watchlist_title1"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintBottom_toTopOf="@id/progress_horizontal_watchlist_guideline3"
      app:layout_constraintEnd_toStartOf="@id/vertical_watchlist_guideline"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/watchlist_title2"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginStart="12dp"
      app:layout_constraintBottom_toTopOf="@id/progress_horizontal_watchlist_guideline3"
      app:layout_constraintStart_toEndOf="@id/vertical_watchlist_guideline"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/watchlist_title3"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintBottom_toTopOf="@id/progress_horizontal_watchlist_guideline2"
      app:layout_constraintEnd_toStartOf="@id/vertical_watchlist_guideline"
      app:layout_constraintTop_toTopOf="@id/progress_horizontal_watchlist_guideline3"/>

    <TextView
      android:id="@+id/watchlist_title4"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginStart="12dp"
      app:layout_constraintBottom_toTopOf="@id/progress_horizontal_watchlist_guideline2"
      app:layout_constraintStart_toEndOf="@id/vertical_watchlist_guideline"
      app:layout_constraintTop_toTopOf="@id/progress_horizontal_watchlist_guideline3"/>

    <TextView
      android:id="@+id/watchlist_title5"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintBottom_toTopOf="@id/progress_horizontal_watchlist_guideline1"
      app:layout_constraintEnd_toStartOf="@id/vertical_watchlist_guideline"
      app:layout_constraintTop_toTopOf="@id/progress_horizontal_watchlist_guideline2"/>

    <TextView
      android:id="@+id/watchlist_title6"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginStart="12dp"
      app:layout_constraintBottom_toTopOf="@id/progress_horizontal_watchlist_guideline1"
      app:layout_constraintStart_toEndOf="@id/vertical_watchlist_guideline"
      app:layout_constraintTop_toTopOf="@id/progress_horizontal_watchlist_guideline2"/>

    <TextView
      android:id="@+id/watchlist_title7"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/vertical_watchlist_guideline"
      app:layout_constraintTop_toBottomOf="@id/progress_horizontal_watchlist_guideline1"/>

    <TextView
      android:id="@+id/watchlist_title8"
      android:layout_width="175dp"
      android:layout_height="177dp"
      android:layout_marginStart="12dp"
      app:layout_constraintTop_toBottomOf="@id/progress_horizontal_watchlist_guideline1"
      app:layout_constraintStart_toEndOf="@id/vertical_watchlist_guideline"/>



</androidx.constraintlayout.widget.ConstraintLayout>