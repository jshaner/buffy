<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".controller.SearchResultFragment">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/progress_horizontal_guideline1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.75"/>


  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/progress_horizontal_guideline2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5"/>

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/progress_horizontal_guideline3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.25"/>


  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/vertical_guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.75"/>

  <Button
    android:id="@+id/button_watchlist1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_to_watchlist"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/progress_horizontal_guideline3"/>

  <Button
    android:id="@+id/button_watchlist2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_to_watchlist"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintTop_toTopOf="@id/progress_horizontal_guideline3"
    app:layout_constraintBottom_toTopOf="@id/progress_horizontal_guideline2"/>

  <Button
    android:id="@+id/button_watchlist3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_to_watchlist"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintTop_toTopOf="@id/progress_horizontal_guideline2"
    app:layout_constraintBottom_toTopOf="@id/progress_horizontal_guideline1"/>

  <Button
    android:id="@+id/button_watchlist4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_to_watchlist"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintTop_toBottomOf="@id/progress_horizontal_guideline1"
    app:layout_constraintBottom_toBottomOf="parent"/>


  <TextView
    android:id="@+id/text_movie1"
    android:layout_width="310dp"
    android:layout_height="177dp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintBottom_toTopOf="@id/progress_horizontal_guideline3"
    app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/text_movie2"
    android:layout_width="310dp"
    android:layout_height="177dp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/progress_horizontal_guideline3"
    app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
    app:layout_constraintBottom_toTopOf="@id/progress_horizontal_guideline2"
    />

  <TextView
    android:id="@+id/text_movie3"
    android:layout_width="310dp"
    android:layout_height="177dp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintBottom_toTopOf="@id/progress_horizontal_guideline1"
    app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
    app:layout_constraintTop_toBottomOf="@id/progress_horizontal_guideline2"
    />

  <TextView
    android:id="@+id/text_movie4"
    android:layout_width="310dp"
    android:layout_height="177dp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
    app:layout_constraintTop_toBottomOf="@id/progress_horizontal_guideline1"/>



</androidx.constraintlayout.widget.ConstraintLayout>